	<div class="body">
		<table>
		<tr>
			<td>
					<form class="form-horizontal" id="fileupload" action="" method="POST" enctype="multipart/form-data">
											<div class="row-fluid">
												<div class="control-group span3"  style="margin-left:10px">
												<label class="control-label" for="noticeIssueORG" >发布单位</label>
												<div class="controls" >
													<select name="noticeIssueORG" class="input-small">
														<option value="QB">全部</option>
														<option value="XX">学校</option>
														<option value="JWC">教务处</option>
														<option value="YWJYZ">语文教研组</option>
													</select>
												</div>
											</div>
												<div class="control-group span3"  style="margin-left:10px">
												<label class="control-label" for="noticeType">通知类别</label>
												<div class="controls">
													<select name="noticeType" class="input-small">
														<option value="QB">全部</option>
														<option value="JW">教务信息</option>
														<option value="PX">培训信息</option>
														<option value="QT">其它</option>
													</select>
												</div>
											</div>
											
											<div class="control-group span3"  style="margin-left:10px">
												<label class="control-label" for="noticeLevel">通知级别</label>
												<div class="controls">
													<select name="noticeLevel" class="input-small">
														<option value="QB">全部</option>
														<option value="PT">普通消息</option>
														<option value="ZY">重要消息</option>
														<option value="JJ">紧急消息</option>
													</select>
												</div>
											</div>
											<div class="control-group span3">
												<label class="control-label" for="noticeValidity" style="width:100px">有效期</label>
												<div class="controls" style="margin-left:20px">
													<select name="noticeValidity" class="input-small">
														<option value="1">1天</option>
														<option value="2">2天</option>
														<option value="3">1月</option>
														
													</select>
												</div>
											</div>
											</div>
											<div class="row-fluid">
												<div class="control-group  span2">
												<label class="control-label" for="noticeIssueTime">发布日期</label>
												<div class="controls">
														<span  id="noticeIssueTime"></span>								
<!-- 															<input id="noticeIssueTime" type="text" class="input-small"  name="noticeIssueTime" readonly="readonly">		 -->
													
												</div>
												
											</div>
											<div class="control-group  span5">
											 	<label class="control-label" for="noticeRequiredReader">必读人员</label>
												<div class="controls ">	
													<div class="input-append">
														<input  type="text"  name="noticeRequiredReader" class="input-medium" id="noticeRequiredReader" readonly="readonly">
													    <button class="btn searchPeople" type="button">查找</button>
<!-- 													    <a data-bypass href="personList.html" class="btn searchPeople">查找</a> -->
													</div>									    
													
												</div>
											 </div>
											 <div class="control-group  span5 ">
											 	<label class="control-label" for="noticeCanReader">可视范围</label>
												<div class="controls" >
                                                                <label class="checkbox inline">
                                                                    <input type="checkbox" data-form="uniform" name="inputCheckbox"  value="option1"> 教师
                                                                </label>
                                                                <label class="checkbox inline">
                                                                    <input type="checkbox" data-form="uniform" name="inputCheckbox"  value="option2"> 学生
                                                                </label>
                                                                <label class="checkbox inline">
                                                                    <input type="checkbox" data-form="uniform" name="inputCheckbox"  value="option3"> 家长
                                                                </label>
                                                               
                                                         </div> 
                                                                                                    
											 </div>
											 
												
											</div>
											<div>
												<!-- Redirect browsers with JavaScript disabled to the origin page -->
                                    <noscript><input type="hidden" name="redirect" value="http://blueimp.github.com/jQuery-File-Upload/"></noscript>
                                    <!-- The fileupload-buttonbar contains buttons to add/delete files and start/cancel the upload -->
                                    <div class="row-fluid fileupload-buttonbar">
                                      <div class="span7 offset1">
                                        <!-- The fileinput-button span is used to style the file input field as button -->
                                        <span class="btn  fileinput-button">
                                          <i class="icon-plus icon-white"></i>
                                          <span>添加附件</span>
                                          <input type="file" name="files[]" multiple>
                                        </span>
                                       <button type="submit" class="btn  start">
                                          <i class="icon-upload icon-white"></i>
                                          <span>开始上传</span>
                                        </button>
                                        <button type="reset" class="btn  cancel">
                                          <i class="icon-ban-circle icon-white"></i>
                                          <span>取消上传</span>
                                        </button>
                                        <button type="button" class="btn delete">
                                          <i class="icon-trash icon-white"></i>
                                          <span>删除</span>
                                        </button>
                                      <!--   <input type="checkbox" class="toggle">-->
                                        <!-- The loading indicator is shown during file processing -->
                                        <span class="fileupload-loading"></span>
                                      </div>
                                      <!-- The global progress information -->
                                      <div class="span4 fileupload-progress fade">
                                        <!-- The global progress bar -->
                                        <div class="progress progress-success progress-striped active" role="progressbar" aria-valuemin="0" aria-valuemax="100">
                                          <div class="bar" style="width:0%;"></div>
                                        </div>
                                        <!-- The extended global progress information -->
                                        <div class="progress-extended">&nbsp;</div>
                                      </div>
                                    </div>
                                    <!-- The table listing the files available for upload/download -->
                                    <table role="presentation" class="table table-striped"><tbody class="files" data-toggle="modal-gallery" data-target="#modal-gallery"></tbody></table>
											</div>
                                            <div class="row-fluid">
                                            	 <div class="control-group ">
												<label class="control-label" for="noticeTopic">主题</label>
												<div class="controls">
													<input type="text" value=""  class="input-large" name="noticeTopic">
												</div>
											
											</div>
                                            </div>
                                           
											<div class="row-fluid">
                                            	 <div class="control-group span6">
												<label class="control-label" for="noticeContent">内容</label>
												<div class="controls">
												<div class="textarea">
										            <textarea  name="noticeContent" rows="3"  class="input-block-level" style="height: 100px;"> </textarea>
									             </div>
													
												</div>
											
											</div>
                                            </div>
                                        <div class="row-fluid">
                                        	 <div class="control-group  span6">
											 	<label class="control-label" for="noticeCanReader">对以下人员发送短信：</label>
												<div class="controls" style="width:300px">
                                                                <label class="checkbox inline">
                                                                    <input type="checkbox" data-form="uniform" name="inputCheckbox"  value="option1"> 教师
                                                                </label>
                                                                <label class="checkbox inline">
                                                                    <input type="checkbox" data-form="uniform" name="inputCheckbox"  value="option2"> 学生
                                                                </label>
                                                                <label class="checkbox inline">
                                                                    <input type="checkbox" data-form="uniform" name="inputCheckbox"  value="option3"> 家长                                                             
                                                                </label>
                                                               &nbsp;&nbsp;<label style="display:inline">短信余额: <span>100</span></label> 
                                                         </div>      
                                                       
                                                                                                 
											 </div>
                                        </div>
                                        <div class="row-fluid">
                                        	<div class="span4 offset3">
                                        		<button type="button" class="btn btn-primary">发布</button>
                                        		<button type="reset" class="btn btn-primary">重填</button>
                                   		
                                        	</div>
                                        </div>
										</form>
			</td>
			
		</tr>
		</table>
	</div>

</div>
